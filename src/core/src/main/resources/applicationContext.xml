<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="
	    	http://www.springframework.org/schema/beans     http://www.springframework.org/schema/beans/spring-beans.xsd
            http://cxf.apache.org/core                      http://cxf.apache.org/schemas/core.xsd
            http://www.springframework.org/schema/context   http://www.springframework.org/schema/context/spring-context-3.0.xsd
            http://www.springframework.org/schema/mvc       http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd"
	default-autowire="byName">


	<!-- Config dir -->
	<bean id="baseConfig"
		class="it.geosolutions.opensdi2.config.OpenSDIManagerConfigImpl" init-method="initConfigDir">
	</bean>

	<!-- The configuration DAO -->
	<bean id="converter"
		class="it.geosolutions.opensdi2.configurations.model.converters.PropertiesConfigurationConverter" />

	<bean id="daoBean"
		class="it.geosolutions.opensdi2.configurations.dao.PropertiesDAO" init-method="init" depends-on="baseConfig">
		<property name="configDirManager" ref="baseConfig" />
		<property name="configConverter" ref="converter" />
	</bean>

	<!-- The configuration Depot -->
	<bean id="depot"
		class="it.geosolutions.opensdi2.configurations.services.ObservableConfigDepotImpl">
		<property name="dao" ref="daoBean" />
	</bean>

	<!-- The Configuration interceptor -->
	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/**" />
			<bean
				class="it.geosolutions.opensdi2.configurations.services.interceptors.ConfigurationInterceptor">
				<property name="depot" ref="depot" />
			</bean>
		</mvc:interceptor>
	</mvc:interceptors>

	<bean
		class="org.springframework.beans.factory.config.PropertyOverrideConfigurer">
		<property name="ignoreResourceNotFound" value="true" />
		<property name="order" value="10" />
		<property name="locations">
			<list>
				<value>classpath*:opensdi-config-ovr.properties</value>
				<!-- used for externalized override -->
				<value>${opensdi-ovr:dummy}</value>
				<value>file:///${OPENSDI_CONFIG_FILE:dummy}</value>
			</list>
		</property>
	</bean>



</beans>
